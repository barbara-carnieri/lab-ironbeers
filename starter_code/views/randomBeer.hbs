<main class="random-container">

  {{#each randomBeers}}
  
  <img src=" {{this.image_url}} " alt="beer">
  <article class="beer-item">
    <h2> {{this.name}} </h2>
    <h3>{{this.tagline}}</h3>
    <p>{{this.description}}</p>
    <p><strong>Food pairing</strong></p>
    <ul>
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><strong>Brewer Tips: </strong>{{this.brewers_tips}}</p>
  </article>

  {{/each}}

</main>